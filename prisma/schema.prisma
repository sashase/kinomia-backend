generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id            Int
  title         String
  title_ua      String
  overview      String
  backdrop_path String
  poster_path   String
  rating        Float?

  showtimes Showtime[]

  @@id([id, title])
}

model Showtime {
  id                   Int      @id @default(autoincrement())
  internal_showtime_id Int
  date                 DateTime
  format               String?
  price                Int?
  order_link           String?

  cinema      Cinema @relation(fields: [cinema_id], references: [id])
  cinema_id   Int
  movie       Movie  @relation(fields: [movie_id, movie_title], references: [id, title])
  movie_id    Int
  movie_title String

  @@unique([internal_showtime_id, cinema_id])
}

model Cinema {
  id                 Int     @id @default(autoincrement())
  internal_cinema_id String
  name               String
  city               String?
  address            String?

  network    Network @relation(fields: [network_id], references: [id])
  network_id Int

  showtimes Showtime[]

  @@unique([internal_cinema_id, network_id])
}

model Network {
  id   Int    @id @default(autoincrement())
  name String

  cinemas Cinema[]
}
