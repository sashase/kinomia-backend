generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Showtime {
  id                   Int      @id @default(autoincrement())
  internal_showtime_id Int
  movie                String
  date                 DateTime
  format               String?
  price                Int?
  order_link           String?
  imdb_link            String?
  cinema               Cinema   @relation(fields: [cinema_id], references: [id])
  cinema_id            Int

  @@unique([internal_showtime_id, cinema_id])
}

model Cinema {
  id        Int        @id @default(autoincrement())
  name      String
  network   String
  city      String?
  address   String?
  showtimes Showtime[]
}
