generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id    Int    @id
  title String

  showtimes Showtime[]
}

model Showtime {
  id                   Int      @id @default(autoincrement())
  internal_showtime_id Int
  title                String
  date                 DateTime
  format               String?
  price                Int?
  order_link           String?
  imdb_link            String?

  cinema    Cinema @relation(fields: [cinema_id], references: [id])
  cinema_id Int
  movie     Movie  @relation(fields: [movie_id], references: [id])
  movie_id  Int

  @@unique([internal_showtime_id, cinema_id])
}

model Cinema {
  id                 Int     @id @default(autoincrement())
  internal_cinema_id String
  name               String
  city               String?
  address            String?

  network    Network @relation(fields: [network_id], references: [id])
  network_id Int

  showtimes Showtime[]

  @@unique([internal_cinema_id, network_id])
}

model Network {
  id   Int    @id @default(autoincrement())
  name String

  cinemas Cinema[]
}
